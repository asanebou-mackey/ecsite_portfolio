<div class="container">
  <h1>カテゴリー一覧</h1>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @categories.each do |category| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= category.name %></h5>
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to '編集', edit_category_path(category.id), class: "btn btn-primary btn-sm" %>
              <%= button_to '削除', category_path(category.id), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'カテゴリー登録', new_category_path, class: "btn btn-success mt-3" %>
</div>
