<div class="container">
  <h1>アイテム編集ページ</h1>
  <%= form_with model: @item do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="mb-3">
      <%= f.label :image, "アイテム画像", class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :name, "アイテム名", class: "form-label" %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :price, "アイテム価格", class: "form-label" %>
      <%= f.text_field :price, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :description, "アイテム概要", class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :size, "サイズ", class: "form-label" %>
      <%= f.select :size, [["S", 1], ["M", 2], ["L", 3], ["XL", 4]], include_blank: "サイズを選択して下さい", class: "form-select" %>
    </div>
    <div class="mb-3">
      <%= f.label :color, "カラー", class: "form-label" %>
      <%= f.select :color, [["ホワイト", 1], ["グレー", 2], ["ネイビー", 3], ["ベージュ", 4], ["レッド", 5], ["ブルー", 6], ["グリーン", 7], ["イエロー", 8], ["オレンジ", 9], ["ピンク", 10], ["パープル", 11]], include_blank: "カラーを選択して下さい", class: "form-select" %>
    </div>
    <div class="mb-3">
      <%= f.label :gender, "性別", class: "form-label" %>
      <%= f.select :gender, [["男性", 1], ["女性", 2], ["その他", 9]], include_blank: "性別を選択して下さい", class: "form-select" %>
    </div>
    <div class="mb-3">
      <%= f.label :brand_id, "ブランド", class: "form-label" %>
      <%= f.collection_select :brand_id, Brand.all, :id, :name, include_blank: "選択して下さい", class: "form-select" %>
    </div>
    <div class="mb-3">
      <%= f.label :category_id, "カテゴリー", class: "form-label" %>
      <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "選択して下さい", class: "form-select" %>
    </div>
    <div>
      <%= f.submit '登録する', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
